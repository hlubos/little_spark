/* pages/demo2/scroll-view/scroll-view.wxss */
.demo-box{
    margin: auto;
    width: 300px;
    height: 200px; 
    border: 1px dashed black;
  }
  .title{
    text-align: center;
  }
  scroll-view{
    width: 100%;
    height: 300rpx;
    white-space: nowrap;
  }
  .scroll-item-y{
    height: 300rpx;
    line-height: 300rpx;
    text-align: center;
    font-size: 30pt;
    background-color: lightblue;
  }
  .scroll-item-x{
    width: 100%;
    height: 300rpx;
    line-height: 300rpx;
    text-align: center;
    font-size: 30pt;
    background-color: lightcoral;
    display: inline-block;
  }